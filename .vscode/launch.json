{
    "version": "0.2.0",
    "configurations": [
        {
            "name":    "erhe editor GBD",
            "type":    "cppdbg",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "program": "${command:cmake.launchTargetPath}",
        },
        {
            "name":        "erhe editor GBD Remote",
            "type":        "cppdbg",
            "request":     "launch",
            "cwd":         "${workspaceFolder}/src/editor",
            "environment": [ {"name": "DISPLAY", "value": ":0"}],
            "program":     "${command:cmake.launchTargetPath}",
        },
        {
            "name":    "erhe editor LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "program": "${command:cmake.launchTargetPath}",
        },
        {
            "name":    "hextiles LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/hextiles",
            "program": "${command:cmake.launchTargetPath}",
        },
        {
            "name":    "editor VS",
            "windows": {
                "type": "cppvsdbg",
            },
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "cwd":     "${workspaceFolder}/src/editor",
        },
        {
            "name":    "Python: Current File",
            "type":    "python",
            "request": "launch",
            "program": "${file}",
            "args":    ["${workspaceFolder}/build/src/erhe/gl"],
            "console": "integratedTerminal"
        },
        {
            "name":    "Client GDB",
            "type":    "cppdbg",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "program": "${workspaceFolder}/src/editor/net-test",
            "args": [
                "--client",
                "--connect-address", "127.0.0.1",
                "--connect-port",    "34567"
            ],
        },
        {
            "name":    "Client LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/editor/net-test",
            "args": [
                "--client",
                "--connect-address", "127.0.0.1",
                "--connect-port",    "34567"
            ],
        },
        {
            "name":    "Server GDB",
            "type":    "cppdbg",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "program": "${workspaceFolder}/src/editor/net-test",
            "args": [
                "--server",
                "--listen-address", "0.0.0.0",
                "--listen-port",    "34567"
            ],
        },
        {
            "name":    "Server LLDB",
            "type":    "lldb",
            "request": "launch",
            "cwd":     "${workspaceFolder}/src/editor",
            "console": "integratedTerminal",
            "program": "${workspaceFolder}/src/editor/net-test",
            "args": [
                "--server",
                "--listen-address", "0.0.0.0",
                "--listen-port",    "34567"
            ],
        }
    ],
    "compounds": [
        {
            "name":           "Server/Client GDB",
            "configurations": [ "Server GDB", "Client GDB" ],
            "stopAll":        true
        },
        {
            "name":           "Server/Client LLDB",
            "configurations": [ "Server LLDB", "Client LLDB" ],
            "stopAll":        true
        }
    ]
}
